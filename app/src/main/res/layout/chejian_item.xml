<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorLoginBack"
    android:paddingTop="10dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_manage_client_head"
        android:src="@mipmap/client_mine"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_chejian"
        android:layout_toRightOf="@id/iv_manage_client_head"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"
        android:maxEms="6"
        android:lines="1"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:text="XXXXcheijan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />


    <ImageView
        android:src="@mipmap/jiantou"
        android:layout_alignParentRight="true"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>