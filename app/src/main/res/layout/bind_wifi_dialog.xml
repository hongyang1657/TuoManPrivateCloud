<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/dialog_title_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="请先断电并重启一下设备。待指示灯常量时，添加下列机床信息"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorTuoManBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:background="@color/colorTuoManBack"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_bind_machine_name"
            android:textSize="16sp"
            android:background="@null"
            android:hint="输入设备名称"
            android:textColor="@color/colorTuoManBack"
            android:gravity="center"
            android:clickable="true"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/colorTuoManBack"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1px" />
        <EditText
            android:id="@+id/et_bind_machine_workshop"
            android:textSize="16sp"
            android:background="@null"
            android:hint="输入车间"
            android:textColor="@color/colorTuoManBack"
            android:gravity="center"
            android:clickable="true"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:background="@color/colorTuoManBack"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:textColor="@color/colorText"
            android:clickable="true"
            android:onClick="secondaryClick"
            android:background="@drawable/dialog_cancel"
            android:textSize="16sp"
            android:padding="14dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/colorTuoManBack"
            android:layout_width="1px"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_enter"
            android:text="确定"
            android:clickable="true"
            android:onClick="secondaryClick"
            android:background="@drawable/dialog_enter"
            android:textColor="@color/colorTuoManBack"
            android:textSize="16sp"
            android:padding="14dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>