<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorLoginBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_mine"
        layout="@layout/title_layout"/>

    <TextView
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <RelativeLayout
        android:id="@+id/rl_mine_account"
        android:layout_weight="2"
        android:clickable="true"
        android:background="@color/colorTuoManBack"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_mine_account"
            android:src="@mipmap/head_big"
            android:scaleType="centerInside"
            android:layout_margin="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_admin"
            android:text="管理员"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@id/iv_mine_account"
            android:layout_alignTop="@id/iv_mine_account"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_id"
            android:text="ID:"
            android:textColor="@color/colorText"
            android:layout_toRightOf="@id/iv_mine_account"
            android:gravity="center"
            android:layout_alignBottom="@id/iv_mine_account"
            android:layout_below="@id/tv_admin"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_hehe"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/tv_user_management"
        android:layout_weight="1"
        android:clickable="true"
        android:text="客户列表"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:drawableLeft="@mipmap/client_mine"
        android:drawableRight="@mipmap/jiantou"
        android:background="@color/colorTuoManBack"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:drawablePadding="14dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/tv_user_modifi_pwd"
        android:layout_weight="1"
        android:text="修改密码"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:clickable="true"
        android:drawableLeft="@mipmap/modify_password_mine"
        android:drawableRight="@mipmap/jiantou"
        android:background="@color/colorTuoManBack"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:drawablePadding="14dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/tv_user_help"
        android:layout_weight="1"
        android:text="帮助反馈"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:drawableLeft="@mipmap/help_mine"
        android:drawableRight="@mipmap/jiantou"
        android:background="@color/colorTuoManBack"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:drawablePadding="14dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/tv_user_setting"
        android:layout_weight="1"
        android:text="设置"
        android:textColor="@color/colorWhite"
        android:clickable="true"
        android:textSize="18sp"
        android:drawableLeft="@mipmap/setting_mine"
        android:drawableRight="@mipmap/jiantou"
        android:background="@color/colorTuoManBack"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:drawablePadding="14dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>