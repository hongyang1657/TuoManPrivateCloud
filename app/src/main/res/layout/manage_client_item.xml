<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorLoginBack"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_manage_client_head"
        android:src="@mipmap/client_mine"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_manage_client_name"
        android:layout_toRightOf="@id/iv_manage_client_head"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:layout_alignTop="@id/iv_manage_client_head"
        android:gravity="center"
        android:maxEms="6"
        android:lines="1"
        android:ellipsize="end"
        android:paddingTop="10dp"
        android:text="XXXX企业"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_manage_client_phonenumber"
        android:layout_toRightOf="@id/tv_manage_client_name"
        android:textSize="14sp"
        android:maxEms="13"
        android:lines="1"
        android:ellipsize="end"
        android:paddingTop="10dp"
        android:paddingLeft="16dp"
        android:textColor="@color/colorText"
        android:layout_alignTop="@id/tv_manage_client_name"
        android:layout_alignBottom="@id/tv_manage_client_name"
        android:gravity="center"
        android:text="(18923456789)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_manage_client_detail"
        android:layout_toRightOf="@id/iv_manage_client_head"
        android:layout_below="@id/tv_manage_client_name"
        android:textSize="14sp"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:text="1号生产线，2号生产线，3号生产线"
        android:layout_alignBottom="@id/iv_manage_client_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@mipmap/jiantou"
        android:layout_alignParentRight="true"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>