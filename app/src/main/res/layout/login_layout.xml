<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="5"
    android:gravity="center_horizontal"
    android:background="@color/colorTuoManBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_logo"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="1px"
        android:background="@drawable/login_button_bg_username"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/tv_login_name"
            android:layout_weight="1"
            android:hint="请输入账号"
            android:text="1"
            android:textColorHint="@color/colorText"
            android:background="@null"
            android:digits="@string/et_input_type"
            android:lines="1"
            android:maxLength="16"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:background="@drawable/login_button_bg_pwd"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/tv_login_pwd"
            android:layout_weight="1"
            android:hint="请输入密码"
            android:textColorHint="@color/colorText"
            android:background="@null"
            android:digits="@string/et_input_type"
            android:lines="1"
            android:maxLength="16"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_login_forget"
            android:clickable="true"
            android:padding="6dp"
            android:text="忘记密码？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_login_button"
            android:scaleType="center"
            android:clickable="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>